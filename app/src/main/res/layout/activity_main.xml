<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainLayout">

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/imgPanic"
        android:background="@drawable/panic_state"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/txtLocation"
        android:background="#ffc52626"
        android:textColor="#fffffdf4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/txtServiceStatus"
        android:layout_marginTop="10dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire Emergency"
        android:id="@+id/btnFire"
        android:background="#ff484093"
        android:textColor="#fffffdf4"
        android:layout_below="@+id/imgPanic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Emergency"
        android:id="@+id/btnMedical"
        android:background="#ff484093"
        android:textColor="#fffffdf4"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnFire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Police Emergency"
        android:id="@+id/btnPolice"
        android:background="#ff484093"
        android:textColor="#fffffdf4"
        android:layout_below="@+id/btnMedical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Service Status : Not Initiated"
        android:id="@+id/txtServiceStatus"
        android:layout_below="@+id/btnPolice"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffc52626"
        android:textColor="#fffffdf4" />

</RelativeLayout>
